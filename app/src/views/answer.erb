<row>
  <h1>question book</h1>
</row>
<row>
  <h2>answer a question</h2>
</row>

<audio>
  <source id="beep" src="audio/beep.mp3"></source>
</audio>

<form method="post" action="answered">
  <row>
    <label>its hex-id is
      <input type="text"
             id="q_id"
             name="q_id"
             autocomplete="off"
             placeholder="?"
             autofocus>
    </label>
  </row>
  <textarea id="q_text" readonly></textarea>
  <textarea id="a_text"
            name="a_text"
            placeholder="Enter your answer here"></textarea>
  <row>
    <button type="submit">submit it</button>
  </row>
</form>
