<style>
@media screen {

  button[type="submit"] {
    float: right;
    width: 135px;
    padding-right: 10px;
  }

}
</style>

<!-- =========================================================== -->

<script type="text/javascript"><!--

$(document).ready(function() {

  const submit = abled($(':submit'));

  submit.disable();

  $('#q_text').keyup(function(){
    // TODO: have maximum question length
    submit.enable($(this).val().trim() !== '');
  });

});

//--></script>

<h1>ask a question</h1>

<form method="post" action="asked">
  <row>
    <label>its hex-id is
      <input type="text" id="q_id" name="q_id" readonly value="<%= @qid %>">
    </label>
  </row>
  <textarea id="q_text"
            name="q_text"
            placeholder="Enter your question here" autofocus></textarea>
  <row>
    <button type="submit">submit it</button>
  </row>
</form>
